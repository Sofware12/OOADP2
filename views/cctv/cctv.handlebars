<html>
<head>
<link rel="stylesheet" type="text/css" href="css/cctv.css">
</head>
<body>
<a id="CCTVControls" href="/cctv">
    CCTV Controls
</a>
<p id="SecurityCameras">
    Security Cameras
</p>
<br>
<br>
<form action="/cctv/cctv" method="POST" id="cctv">
<div id="SecurityCameras">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div>
                <a href="/cctv1.handlebars">Security Camera #1</a>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
            <div>
                <span onclick="renameCamera(this)">Security Camera #2</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
            <div>
                <span onclick="renameCamera(this)">Security Camera #3</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
            <div>
                <span onclick="renameCamera(this)">Security Camera #4</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div>
                <span onclick="renameCamera(this)" name="name">Security Camera #5</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
            <div>
                <span onclick="renameCamera(this)" name="name">Security Camera #6</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
            <div>
                <span onclick="renameCamera(this)" name="name">Security Camera #7</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
            <div>
                <span onclick="renameCamera(this)" name="name">Security Camera #8</span>
                <label class="switch">
                    <input type="checkbox">
                    <span class="slider round"></span>
                </label>
            </div>
        </div>
    </div>
</div>
<button type="submit" id="saveData">Save Camera Names</button>
</form>
<br>
<br>
<p id="Videos">
    Video Options
</p>
<br>
<div class="row">
    <div class="col-sm-12 col-md-4 col-lg-4">
        <a id="ViewVideos" href="/viewVideos">
            View available videos
        </a>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-4">
        <a id="UploadVideos" href="/uploadFile">
            Upload Videos
        </a>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-4">    
        <a id="DeleteVideos" href="/deleteVideos">
            Delete videos
        </a>
    </div>
</div>
</body>
</html>