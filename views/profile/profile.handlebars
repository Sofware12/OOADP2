<div class="container">
    {{#if profile}}
    <div class="card card-body">
        <h3 class="text-primary">Profile</h3>
        {{#each profile}}
        <div class="card border-primary mb-2 w-100 mx-auto">
            <div class="card-header">
                <h5 class="card-title">{{uname}}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-2">

                    </div>
                </div>

                <div class="col-sm-12 col-md-12 col-lg-8">
                    <div class="row">
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <p class="font-italic">First Name</p>
                            <p class="text-info">{{fname}}</p>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <p class="font-italic">Last Name</p>
                            <P class="text-info">{{lname}}</P>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <p class="font-italic">Age</p>
                            <P class="text-info">{{Age}}</P>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-3">
                            <p class="font-italic">Gender</p>
                            <P class="text-info">{{Gender}}</P>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-md-6 col-lg-8">
                            <p class="font-italic">Email</p>
                            <p class="text-info">{{email}}</p>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <p class="font-italic">Phone Number</p>
                            <p class="text-info">{{phoneNum}}</p>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-2">
                        <p class="font-italic"></p>
                        <a href="/profile/edit/{{id}}" class="card-link">
                            <i class="fas fa-pencil-alt"></i>
                            Edit
                        </a>
                        <a href="video/delete/{{id}}" class="card-link" data-toggle="confirmation"
                            data-title="Are you sure you want to delete?">
                            <i class="far fa-trash-alt"></i>
                            Delete
                        </a>
                    </div>
                </div>
            </div>

            <div class="accordion" id="profileAccordion{{id}}">
                <div class="card-header" id="headingOne{{id}}">
                    <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne{{id}}" aria-expanded="false" aria-controls="collapseOne{{id}}">
                        Biography<i class="fas fa-chevron-down"></i>
                    </button>
                </div>

                <div id="collapseOne{{id}}" class="collapse" aria-labelledby="headingOne{{id}}" data-parent="#storyAccordion{{id}}">
                    <div class="card-body">
                        {{bio}}
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{else}}
<h1>You have not created a profile.</h1>
{{/if}}